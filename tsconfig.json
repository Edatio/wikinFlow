{
    "compilerOptions": {
      "target": "ES2020",                         // Specifies the target ECMAScript version.
      "module": "ESNext",                         // Specifies the module system (e.g., ESNext, CommonJS, etc.).
      "moduleResolution": "node",                 // Resolves modules using Node.js resolution strategy.
      "esModuleInterop": true,                    // Allows default imports from modules with `export =`.
      "allowJs": true,                            // Allows JavaScript files to be compiled.
      "jsx": "react",                             // Supports JSX syntax for React.
      "strict": true,                             // Enables strict type-checking options.
      "skipLibCheck": true,                       // Skips type checking of declaration files.
      "sourceMap": true,                          // Generates corresponding `.map` files.
      "resolveJsonModule": true,                  // Allows importing JSON modules.
      "declaration": true,                        // Generates `.d.ts` declaration files.
      "baseUrl": "./",                            // Base directory for resolving non-relative module imports.
      "paths": {                                  // Aliases for module imports.
        "@components/*": ["./src/components/*"],
        "@utils/*": ["./src/utils/*"]
      },
      "outDir": "./dist",                         // Directory for compiled output.
      "rootDir": "./src",                         // Root directory for input files.
      "noEmit": false,                            // Prevents emitting compiled files.
      "removeComments": true                      // Removes comments from output.
    },
    "include": ["./src/**/*"],                      // Files and directories included in the compilation.
    "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.test.tsx"] // Files and directories excluded.
  }
  